@model BookEditViewModel
@{
    ViewData["Title"] = "Modifica libro";
}

<h1>Modifica @Model.Title</h1>

@{
    var authors = (List<SelectListItem>)ViewData["authors"];
}
<div style="max-width: 500px; margin: 0 auto;">
    <h1>Modifica Libro</h1>
    <form method="post">
        <div class="form-group">
            <label class="control-label" asp-for="Title">Titolo</label>
            <input class="form-control" asp-for="Title" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="BookSAuthorSIds">Autori:</label>
            <select class="form-control"
                    asp-for="BookSAuthorSIds"
                    asp-items="@authors"></select>
            <span asp-validation-for="BookSAuthorSIds"></span>
        </div>
        <div class="form-group">
            <a asp-controller="Books" class="btn btn-default">Annulla</a>
            <input type="submit" class="btn btn-primary" value="Salva" />
        </div>
    </form>
</div>