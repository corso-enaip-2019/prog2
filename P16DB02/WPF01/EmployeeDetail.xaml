<Window x:Class="WPF01.EmployeeDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF01"
        mc:Ignorable="d"
        Title="EmployeeDetail" SizeToContent="Height" Width="800">
    
    <StackPanel Name="StkPnPrincipal"
        Orientation="Vertical">

        <StackPanel Name="StkPnInfos"
        Orientation="Vertical">
            <Label Name="LblName" Content="Name" />
            <TextBox Name="TxBxName" />

            <Label Name="LblProductivity" Content="Productivity (0÷1)" />
            <TextBox Name="TxBxProductivity" />
           
            <Label Name="LblTotalBonus" Content="Total bonus" />
            <TextBox Name="TxBxTotalBonus" />
        </StackPanel>

        <StackPanel Name="StkPnButtons"
        Orientation="Horizontal">
            <Button Name="BtnAddEmployee"
                    Content="_Add Employee"
                    Click="BtnAddEmployee_Click"
                    />
            <Button Name="BtnCancel"
                    Content="_Cancel"
                    Click="BtnCancel_Click"
                    
                    />
        </StackPanel>

    </StackPanel>
</Window>